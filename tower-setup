#!/usr/bin/env bb

(require '[bb-tower-deploy.core :as core])

(defn parse-args [args]
  (let [opts (apply hash-map args)]
    {:app-name (get opts "--app-name")
     :default-task (get opts "--default-task")
     :babashka-version (get opts "--babashka-version")}))

(let [opts (parse-args *command-line-args*)]
  (core/setup opts))